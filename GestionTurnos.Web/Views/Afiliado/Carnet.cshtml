@model GestionTurnos.Web.Models.Afiliado

@{
    ViewData["Title"] = "Carnet";
}

<h1>Carnet</h1>

<div class="d-flex justify-content-center align-items-center w-100" style="min-height: 100vh;">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 20px; background-color: #fdfdfd;">
        <div class="text-center">
            <h3 class="fw-bold mb-3 text-primary">Carnet de Afiliado</h3>
            <img src="@Url.Content("../../" + Model.FotoUrl)" alt="Foto del afiliado"
                 width="130" height="130" class="rounded-circle border border-3 border-primary mb-3" />
        </div>

        <hr />

        <dl class="row mb-0">
            <dt class="col-sm-4 text-secondary fw-semibold">Nombre</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-4 text-secondary fw-semibold">Documento</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Documento)</dd>

            <dt class="col-sm-4 text-secondary fw-semibold">Sexo</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Sexo)</dd>

            <dt class="col-sm-4 text-secondary fw-semibold">Correo</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Correo)</dd>

            <dt class="col-sm-4 text-secondary fw-semibold">Teléfono</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>

            <dt class="col-sm-4 text-secondary fw-semibold">QR</dt>
            <dd class="col-sm-8">
                <img src="@ViewBag.QR" alt="Código QR" width="120" height="120" class="mt-2 border rounded" />
            </dd>
        </dl>
    </div>
</div>

<button class="btn btn-primary" onclick="window.print()">Imprimir</button>

<div>
    <a asp-action="Index">Volver</a>
</div>


